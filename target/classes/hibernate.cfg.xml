<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC   "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/opensaferoutes?useTimezone=true&amp;serverTimezone=UTC</property>
		<property name="hbm2ddl.auto">update</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">root</property>
		<property name="show_sql">true</property>
		<property name="hibernate.current_session_context_class">org.hibernate.context.internal.ThreadLocalSessionContext</property>
		<mapping class="modelo.entidade.formulario.Formulario" />
		<mapping class="modelo.entidade.mapa.Ponto" />
		<mapping class="modelo.entidade.mapa.PontoAvaliado" />
		<mapping class="modelo.entidade.mapa.PontoFavorito" />
		<mapping class="modelo.entidade.mapa.Trajeto" />
		<mapping class="modelo.entidade.usuario.UsuarioCadastrado" />
	</session-factory>
</hibernate-configuration>